<UserControl x:Class="ProjectManagerApp.Views.MyProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjectManagementSystem.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Margin="20,20,20,20">
            <TextBlock Text="Мои проекты" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            <TextBlock Text="Проекты, в которых вы участвуете" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,5,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Поиск по названию, описанию или менеджеру"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,10,0"/>
                
                <Button Grid.Column="1"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="5,0,5,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Обновить"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1" Margin="20,0,20,0">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding UserProjects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                CornerRadius="12"
                                Margin="0,0,0,20"
                                Padding="24"
                                Effect="{StaticResource MaterialDesignElevationShadow2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" 
                                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               FontWeight="Bold"
                                               FontSize="20"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Border Background="{Binding StatusColor}"
                                                CornerRadius="8"
                                                Padding="8,4"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="11"/>
                                        </Border>
                                        <Border Background="{Binding RoleInProjectColor}"
                                                CornerRadius="8"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding RoleInProjectText}" 
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Добавить комментарий"
                                            Margin="2"
                                            Command="{Binding DataContext.AddCommentAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="Comment" Width="20" Height="20"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Создать задачу"
                                            Margin="2"
                                            Command="{Binding DataContext.CreateTaskAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="Plus" Width="20" Height="20"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Настройки проекта"
                                            Margin="2"
                                            Command="{Binding DataContext.ProjectSettingsAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="Settings" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBody}"
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           Margin="0,15,0,0"/>

                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountGroup" Width="16" Height="16" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ParticipantsText}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CheckCircle" Width="16" Height="16" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding TasksText}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Comment" Width="16" Height="16" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding CommentsText}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                            Orientation="Horizontal" 
                                            Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                        <materialDesign:PackIcon Kind="Calendar" Width="14" Height="14" 
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding CreatedAtText}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                        <materialDesign:PackIcon Kind="Clock" Width="14" Height="14" 
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding DeadlineText}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Account" Width="14" Height="14" 
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ManagerName}" 
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>

                                <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ProgressBar Grid.Column="0" 
                                                 Value="{Binding Progress}" 
                                                 Maximum="100"
                                                 Height="6"
                                                 Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                 Margin="0,0,10,0"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ProgressText}"
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </ScrollViewer>

            <Border Background="#80000000" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                   Width="150" Height="10"
                                   Foreground="{DynamicResource MaterialDesignShadowBrush}"
                                   Margin="0,0,0,5"/>
                    <TextBlock Text="Загрузка данных..." 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
            <Button Content="⟪" Command="{Binding FirstPageCommand}" Margin="4,0" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Первая страница"/>
            <Button Content="‹" Command="{Binding PreviousPageCommand}" Margin="4,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Предыдущая страница"/>
            <TextBlock Text="Стр." VerticalAlignment="Center" Margin="8,0"/>
            <TextBox Width="50" Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalContentAlignment="Center"/>
            <TextBlock Text="из" VerticalAlignment="Center" Margin="8,0"/>
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center"/>
            <Button Content="›" Command="{Binding NextPageCommand}" Margin="8,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Следующая страница"/>
            <Button Content="⟫" Command="{Binding LastPageCommand}" Margin="4,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Последняя страница"/>
        </StackPanel>

    </Grid>
</UserControl>
