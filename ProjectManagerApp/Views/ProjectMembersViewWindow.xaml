<Window x:Class="ProjectManagerApp.Views.ProjectMembersViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectManagementSystem.WPF.Converters"
        Title="Участники проекта" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Border Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8"
            Effect="{StaticResource MaterialDesignElevationShadow2}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="{DynamicResource MaterialDesignDivider}" 
                    CornerRadius="8,8,0,0" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Участники проекта" 
                               FontSize="18" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="20,0,0,0"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <Button Grid.Column="1" Content="✕" FontSize="16" FontWeight="Bold"
                            Width="30" Height="30" Margin="0,0,10,0"
                            Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Click="Close_Click"/>
                </Grid>
            </Border>
            
            <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{Binding ProjectTitle}" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,20"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Поиск участников..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,10,0"/>
                    </Grid>
                    
                    <TextBlock Text="Текущие участники:" 
                               FontSize="14" FontWeight="Medium"
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <ItemsControl ItemsSource="{Binding ProjectMembers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                        CornerRadius="4" Margin="0,0,0,8" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding FullName}" 
                                                       FontWeight="SemiBold" FontSize="14"
                                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       FontSize="12" Margin="0,2,0,0"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding JoinedAtText}" 
                                                       FontSize="11" Margin="0,2,0,0"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding RoleText}" 
                                                       FontSize="12" FontWeight="Medium"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>
                                            <Button Content="Удалить" 
                                                    Command="{Binding DataContext.RemoveMemberCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    FontSize="11"
                                                    Padding="8,4"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <TextBlock Text="Участники не найдены" 
                               Visibility="{Binding HasNoMembers, Converter={StaticResource BoolToVisibilityConverter}}"
                               FontSize="14" HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    
                    <Grid Margin="0,20,0,0" Visibility="{Binding HasNoMembers, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Страница {0} из {1}">
                                    <Binding Path="CurrentPage"/>
                                    <Binding Path="TotalPages"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                        <Button Content="⟪" Command="{Binding FirstPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        <Button Content="‹" Command="{Binding PreviousPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        <TextBlock Text="Стр." VerticalAlignment="Center" Margin="8,0"/>
                        <TextBox Width="50" Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="из" VerticalAlignment="Center" Margin="8,0"/>
                        <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center"/>
                        <Button Content="›" Command="{Binding NextPageCommand}" Margin="8,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        <Button Content="⟫" Command="{Binding LastPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            
            <Border Grid.Row="2" Background="{DynamicResource MaterialDesignDivider}" 
                    CornerRadius="0,0,8,8" Height="60">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                            VerticalAlignment="Center" Margin="20,0">
                    <Button Content="Добавить участников" 
                            Command="{Binding AddMembersCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="Закрыть" 
                            Command="{Binding CloseCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
