<UserControl x:Class="ProjectManagementSystem.WPF.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0"
                     materialDesign:HintAssist.Hint="Поиск по проектам"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding RefreshCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <ComboBox Grid.Column="1" Width="100" Margin="8,0,0,0"
                      SelectedValue="{Binding PageSize}"
                      SelectedValuePath="Tag"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom">
                <ComboBoxItem Content="10" Tag="10"/>
                <ComboBoxItem Content="25" Tag="25"/>
                <ComboBoxItem Content="50" Tag="50"/>
                <ComboBoxItem Content="100" Tag="100"/>
            </ComboBox>
            <Button Grid.Column="2" Content="Обновить" Margin="8,0,0,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding RefreshCommand}"/>
        </Grid>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding PagedProjects}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="-8,0,0,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="280" Height="200" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12" Margin="8,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="16" FontWeight="SemiBold"/>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding Description}"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           LineStackingStrategy="BlockLineHeight"
                                           LineHeight="16"
                                           MaxHeight="80"/>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="Руководитель: " FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ManagerName}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
            <Button Content="⟪" Command="{Binding FirstPageCommand}" Margin="4,0"/>
            <Button Content="‹" Command="{Binding PrevPageCommand}" Margin="4,0"/>
            <TextBlock Text="Стр." VerticalAlignment="Center" Margin="8,0"/>
            <TextBox Width="50" Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="из" VerticalAlignment="Center" Margin="8,0"/>
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center"/>
            <Button Content="›" Command="{Binding NextPageCommand}" Margin="8,0"/>
            <Button Content="⟫" Command="{Binding LastPageCommand}" Margin="4,0"/>
            <TextBlock Text="Всего: " VerticalAlignment="Center" Margin="16,0,4,0"/>
            <TextBlock Text="{Binding TotalItems}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>

