<Window x:Class="ProjectManagementSystem.WPF.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Система управления проектами - Вход"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="500" Height="750"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f5f5f5" Offset="0"/>
            <GradientStop Color="#e0e0e0" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>


    <Window.Resources>
        <Style x:Key="BeautifulSnackbar" TargetType="materialDesign:Snackbar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Border Background="White" 
            CornerRadius="12" 
            Margin="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

                <StackPanel Margin="32" VerticalAlignment="Center">

                    <Border Margin="0,-5,0,25" 
        Background="Purple"
        CornerRadius="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Effect="{StaticResource MaterialDesignShadowDepth2}">

                        <materialDesign:Snackbar 
        x:Name="LoginSnackbar"
        MessageQueue="{materialDesign:MessageQueue}"
        Background="Transparent"
        Foreground="White"
        Style="{StaticResource BeautifulSnackbar}"/>
                    </Border>


                    <Viewbox Width="64" Height="64" Margin="0,0,0,16" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountGroup" Foreground="{StaticResource PrimaryBrush}"/>
                    </Viewbox>

                    <TextBlock Text="Управление проектами" 
                      FontSize="24" 
                      FontWeight="SemiBold" 
                      HorizontalAlignment="Center"
                      Foreground="{StaticResource PrimaryBrush}"
                      Margin="0,0,0,8"/>

                    <TextBlock Text="Войдите в свой аккаунт" 
                      FontSize="14" 
                      Foreground="Gray" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,32"/>

                    <TextBox materialDesign:HintAssist.Hint="Email адрес"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Margin="0,0,0,16">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <PasswordBox materialDesign:HintAssist.Hint="Пароль" 
                        x:Name="PasswordBox"
                        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                        Margin="0,0,0,24">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                        </PasswordBox.InputBindings>
                    </PasswordBox>

                    <Button Content="ВОЙТИ" 
                   Command="{Binding LoginCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Background="{StaticResource PrimaryBrush}"
                   Foreground="White"
                   Height="44"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

                    <Button Content="ВЫХОД" 
                   Command="{Binding ExitCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Background="{StaticResource PrimaryBrush}"
                   Foreground="White"
                   Height="44"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                      Foreground="Red" 
                      TextWrapping="Wrap"
                      Margin="0,0,0,16"
                      Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                      HorizontalAlignment="Center"/>

                    <ProgressBar IsIndeterminate="True" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,0,0,16"
                        Height="4"/>

                    <Expander Header="Тестовые аккаунты" Margin="0,24,0,0" ExpandDirection="Down">
                        <ScrollViewer>
                            <StackPanel>
                                <Button Content="Админ (admin@test.com)" 
                           Command="{Binding UseDemoAdminCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Foreground="{StaticResource PrimaryBrush}"
                           Height="36"
                           Margin="0,4"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
    
</Window>