<UserControl x:Class="ProjectManagementSystem.WPF.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:ProjectManagementSystem.WPF.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:UsersViewModel}">

    <UserControl.Resources>
        <Style x:Key="UserCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect" Value="{StaticResource MaterialDesignShadowDepth2}"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="200"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Поиск пользователей">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding RefreshCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <ComboBox Grid.Column="1" 
                          SelectedValue="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Tag"
                          Width="100" 
                          Margin="8, 0, 0, 0"
                          VerticalAlignment="Bottom">
                    <ComboBoxItem Content="5" Tag="5"/>
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="25" Tag="25"/>
                    <ComboBoxItem Content="50" Tag="50"/>
                </ComboBox>

                <Button Grid.Column="2" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Command="{Binding CreateUserCommand}"
                        Visibility="{Binding CanManageUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Создать" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Grid.Column="3" Content="Обновить" Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding RefreshCommand}"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Роль:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"/>
                
                <ComboBox Grid.Column="1" 
                          SelectedValue="{Binding SelectedRoleFilter}"
                          SelectedValuePath="Tag"
                          materialDesign:HintAssist.Hint="Все роли">
                    <ComboBoxItem Content="Все роли" Tag="-1"/>
                    <ComboBoxItem Content="Пользователь" Tag="0"/>
                    <ComboBoxItem Content="Менеджер" Tag="1"/>
                    <ComboBoxItem Content="Администратор" Tag="2"/>
                </ComboBox>

                <Button Grid.Column="3" 
                        Content="Сбросить фильтры" 
                        Margin="16,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ClearFiltersCommand}"/>
            </Grid>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="16">
                <ItemsControl ItemsSource="{Binding PagedUsers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" IsItemsHost="True" Margin="-8, 0, 0, 0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource UserCardStyle}"
                                    Cursor="Hand" MouseLeftButtonDown="UserCard_MouseLeftButtonDown">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding FullName}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="👁" 
                                                   FontSize="14" 
                                                   ToolTip="Нажмите для просмотра деталей"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Email}" 
                                               FontSize="12" 
                                               Foreground="Gray" 
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap"/>

                                    <Border Grid.Row="2" 
                                            Background="{Binding RoleColor, Converter={StaticResource StringToBrushConverter}}"
                                            CornerRadius="12" 
                                            Padding="8,4" 
                                            HorizontalAlignment="Left" 
                                            Margin="0,8,0,0">
                                        <TextBlock Text="{Binding RoleText}" 
                                                   Foreground="White" 
                                                   FontSize="10" 
                                                   FontWeight="Medium"/>
                                    </Border>

                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding CreatedAtText}" 
                                               FontSize="11" 
                                               Foreground="Gray" 
                                               Margin="0,8,0,0"/>

                                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0"
                                                Visibility="{Binding DataContext.CanManageUsers, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Width="32" Height="32"
                                                ToolTip="Редактировать"
                                                Margin="0,0,4,0">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Foreground="#2196F3"/>
                                        </Button>
                                        <Button Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Width="32" Height="32"
                                                ToolTip="Удалить">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Foreground="#F44336"/>
                                        </Button>
                                    </StackPanel>

                                    <TextBlock Grid.Row="5" 
                                               Text="{Binding ActivityText}" 
                                               FontSize="10" 
                                               Foreground="Gray" 
                                               TextWrapping="Wrap"
                                               LineHeight="14"
                                               MaxHeight="28"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
            <Button Content="⟪" Command="{Binding FirstPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="‹" Command="{Binding PreviousPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <TextBlock Text="Стр." VerticalAlignment="Center" Margin="8,0"/>
            <TextBox Width="50" Text="{Binding CurrentPage, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="из" VerticalAlignment="Center" Margin="8,0"/>
            <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center"/>
            <Button Content="›" Command="{Binding NextPageCommand}" Margin="8,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="⟫" Command="{Binding LastPageCommand}" Margin="4,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</UserControl>