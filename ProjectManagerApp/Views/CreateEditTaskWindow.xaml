<Window x:Class="ProjectManagementSystem.WPF.Views.CreateEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="700" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#37474F"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" Effect="{StaticResource MaterialDesignShadowDepth5}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="15,15,0,0" Padding="25,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding WindowTitle}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Click="Close_Click"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32"
                            ToolTip="Закрыть">
                        <materialDesign:PackIcon Kind="Close" Foreground="White" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
                <StackPanel>
                    <TextBlock Text="Название задачи *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Введите название задачи"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Описание задачи" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Введите описание задачи"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="100"
                             MaxHeight="150"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Проект *" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="14"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Исполнитель" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Users}"
                              SelectedItem="{Binding SelectedAssignee}"
                              DisplayMemberPath="FullName"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="14"
                              Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Статус *" Style="{StaticResource LabelStyle}"/>
                            <ComboBox SelectedValue="{Binding SelectedStatus}"
                                      SelectedValuePath="Tag"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="14">
                                <ComboBoxItem Content="Новая" Tag="0"/>
                                <ComboBoxItem Content="В работе" Tag="1"/>
                                <ComboBoxItem Content="На проверке" Tag="2"/>
                                <ComboBoxItem Content="Завершена" Tag="3"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Приоритет *" Style="{StaticResource LabelStyle}"/>
                            <ComboBox SelectedValue="{Binding SelectedPriority}"
                                      SelectedValuePath="Tag"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="14">
                                <ComboBoxItem Content="Низкий" Tag="0"/>
                                <ComboBoxItem Content="Средний" Tag="1"/>
                                <ComboBoxItem Content="Высокий" Tag="2"/>
                                <ComboBoxItem Content="Критический" Tag="3"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Планируемые часы" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding PlannedHours, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Например: 8.5"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Фактические часы" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding ActualHours, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Например: 7.5"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="* - обязательные поля" 
                               FontSize="12" 
                               FontStyle="Italic" 
                               Foreground="#757575"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" 
                    Background="#F5F5F5" 
                    CornerRadius="0,0,15,15" 
                    Padding="25,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ProgressBar Grid.Column="0"
                                 IsIndeterminate="True"
                                 Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 VerticalAlignment="Center"
                                 Margin="0,0,20,0"/>

                    <Button Grid.Column="1"
                            Content="Отмена"
                            Click="Cancel_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="120"
                            Height="40"
                            Margin="0,0,15,0"
                            IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}"/>

                    <Button Grid.Column="2"
                            Content="{Binding SaveButtonText}"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource PrimaryBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Width="120"
                            Height="40"
                            IsEnabled="{Binding CanSave}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

