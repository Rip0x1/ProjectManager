<Window x:Class="ProjectManagerApp.Views.CreateEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectManagementSystem.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#37474F"/>
        </Style>

        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:EditModeToHintConverter x:Key="EditModeToHintConverter"/>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="15" Effect="{StaticResource MaterialDesignShadowDepth5}">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="95*"/>
                    <RowDefinition Height="313*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="15,15,0,0" Padding="25,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding WindowTitle}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>

                        <Button Grid.Column="1"
                            Click="Close_Click"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32"
                            ToolTip="Закрыть">
                            <materialDesign:PackIcon Kind="Close" Foreground="White" Width="20" Height="20"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20" Grid.RowSpan="2">
                    <StackPanel Margin="0, 0, 10, 0">
                        <TextBlock Text="Имя *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Введите имя"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                        <TextBlock Text="Фамилия *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Введите фамилию"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                        <TextBlock Text="Email *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Введите email"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                        <TextBlock Text="Пароль *" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="{Binding IsEditMode, Converter={StaticResource EditModeToHintConverter}, ConverterParameter='Введите новый пароль (оставьте пустым, чтобы не менять)|Введите пароль'}"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 FontSize="14"
                                 Margin="0,0,0,20"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                        <TextBlock Text="Подтвердите пароль *" Style="{StaticResource LabelStyle}"
                               Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                 materialDesign:HintAssist.Hint="Подтвердите пароль"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 FontSize="14"
                                 Margin="0,0,0,20"
                                 Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                        <TextBlock Text="Роль *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Roles}"
                              SelectedValue="{Binding SelectedRole}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="Value"
                              materialDesign:HintAssist.Hint="Выберите роль"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              FontSize="14"
                              Margin="0,0,0,20"/>

                        <TextBlock Text="* - обязательные поля" 
                               FontSize="12" 
                               FontStyle="Italic" 
                               Foreground="#757575"
                               Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="3" 
                    Background="#F5F5F5" 
                    CornerRadius="0,0,15,15" 
                    Padding="25,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border
                        Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Panel.ZIndex="1000">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" 
                                   Width="150" Height="10"
                                   Foreground="{DynamicResource MaterialDesignShadowBrush}"/>
                            </StackPanel>
                        </Border>

                        <Button Grid.Column="1"
                            Content="Отмена"
                            Click="Cancel_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="120"
                            Height="40"
                            Margin="0,0,15,0"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>

                        <Button Grid.Column="2"
                            Content="{Binding SaveButtonText}"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource PrimaryBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            Width="120"
                            Height="40"
                            IsEnabled="{Binding CanSave}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>